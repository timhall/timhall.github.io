---
import Page from "./page.astro";
import "katex/dist/katex.min.css";

type Props = {
	title: string;
	publishedAt?: Date | null;
	updatedAt?: Date | null;
};

const { title, publishedAt, updatedAt } = Astro.props;
---

<style is:global>
	pre {
		border-radius: 0;
		border-left: solid 2px var(--pico-color-slate-100);
	}
	code {
		padding-block: 0.1rem;
		padding-inline: 0.3rem;
		color: var(--pico-color);
	}
	pre code {
		padding-block: 0.25rem;
		padding-inline: 0.75rem;
	}
	.astro-code,
	.astro-code span {
		background-color: var(--pico-color-slate-25) !important;
	}

	@media only screen and (prefers-color-scheme: dark) {
		pre {
			border-left: solid 2px var(--pico-color-slate-800);
		}
		.astro-code,
		.astro-code span {
			background-color: var(--pico-color-slate-900) !important;

			color: var(--shiki-dark) !important;
			font-style: var(--shiki-dark-font-style) !important;
			font-weight: var(--shiki-dark-font-weight) !important;
			text-decoration: var(--shiki-dark-text-decoration) !important;
		}
	}
</style>
<Page title={title} publishedAt={publishedAt} updatedAt={updatedAt}>
	<slot />
</Page>
